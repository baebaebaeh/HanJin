	<!-- component스캔해서 bean을 등록한다. aop기능을 스캔하지 않는다. -->
	<context:component-scan base-package="com.ssafy.aspect, com.ssafy.board" />
	<!-- aop관련 어노테이션 해석하자.. --> 
	<aop:aspectj-autoproxy />
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
